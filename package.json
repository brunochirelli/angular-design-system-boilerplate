{
  "name": "@brunochirelli/angular-design-system-boilerplate",
  "version": "0.0.1",
  "description": "Angular Design System Boilerplate",
  "author": "Bruno Chirelli",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "watch": "npm run build:tokens && ng build --watch --configuration development",
    "build": "npm run format && npm run lint && npm run build:tokens && npm run build:lib",
    "build:css": "rollup -c",
    "build:lib": "ng build && npm run build:css",
    "build:tokens": "style-dictionary build",
    "build-storybook": "npm run build:tokens && ng run ui:build-storybook",
    "storybook": "npm run build:tokens && ng run ui:storybook",
    "format": "prettier --write \"projects/ui/src/**/*.{css,scss,html,ts,json}\"",
    "lint:css": "stylelint \"projects/ui/src/**/*.{css,scss}\" --config .stylelintrc.json --fix",
    "lint:js": "ng lint",
    "lint": "npm run lint:css && npm run lint:js",
    "test": "ng test",
    "prepare": "husky install"
  },
  "dependencies": {
    "@angular/animations": "^16.2.5",
    "@angular/cdk": "^16.2.4",
    "@angular/common": "^16.2.5",
    "@angular/compiler": "^16.2.5",
    "@angular/core": "^16.2.5",
    "@angular/forms": "^16.2.5",
    "@angular/material": "^16.2.4",
    "@angular/platform-browser": "^16.2.5",
    "@angular/platform-browser-dynamic": "^16.2.5",
    "@angular/router": "^16.2.5",
    "rxjs": "~7.8.0",
    "style-dictionary": "^3.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.13.3"
  },
  "devDependencies": {
    "@angular-builders/custom-webpack": "^16.0.1",
    "@angular-devkit/build-angular": "^16.2.2",
    "@angular-eslint/builder": "16.2.0",
    "@angular-eslint/eslint-plugin": "16.2.0",
    "@angular-eslint/eslint-plugin-template": "16.2.0",
    "@angular-eslint/schematics": "16.2.0",
    "@angular-eslint/template-parser": "16.2.0",
    "@angular/cli": "~16.2.2",
    "@angular/compiler-cli": "^16.2.5",
    "@compodoc/compodoc": "^1.1.21",
    "@storybook/addon-docs": "^7.4.2",
    "@storybook/addon-essentials": "^7.4.2",
    "@storybook/addon-interactions": "^7.4.2",
    "@storybook/addon-links": "^7.4.2",
    "@storybook/angular": "^7.4.2",
    "@storybook/blocks": "^7.4.2",
    "@storybook/testing-library": "^0.2.1",
    "@types/jasmine": "~4.3.0",
    "@typescript-eslint/eslint-plugin": "^5.59.2",
    "@typescript-eslint/parser": "^5.59.2",
    "eslint": "^8.39.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-typescript": "^0.14.0",
    "husky": "^8.0.3",
    "jasmine-core": "~4.5.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.0.0",
    "lint-staged": "^14.0.1",
    "ng-packagr": "^16.2.3",
    "prettier": "^3.0.3",
    "prettier-eslint": "^15.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rollup-plugin-scss": "^4.0.0",
    "storybook": "^7.4.2",
    "stylelint": "^15.10.3",
    "stylelint-config-idiomatic-order": "^9.0.0",
    "stylelint-config-standard": "^34.0.0",
    "stylelint-config-standard-scss": "^11.0.0",
    "stylelint-order": "^6.0.3",
    "stylelint-scss": "^5.2.0",
    "typescript": "~4.9.4"
  }
}